// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Post {
  id        String   @id @default(cuid())
  topic     String
  content   String
  tone      String
  coverImage String? // Base64 encoded image
  audioUrl   String? // URL to the voice briefing MP3
  schemaMarkup String? // JSON-LD schema for SEO
  userId    String
  status    String   @default("DRAFT")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  socialPosts SocialPost[]
}

model UserSettings {
  id        String   @id @default(cuid())
  userId    String   @unique
  apiKey    String?  // Google Gemini API Key
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SocialPost {
  id        String   @id @default(cuid())
  platform  String   // "instagram", "twitter", "linkedin"
  content   String
  hashtags  String[]
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([postId, platform])
}
